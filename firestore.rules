rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products & categories — publicly readable
    match /products/{doc} {
      allow read: if true;
      allow write: if false;
    }
    match /categories/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // Orders — only authenticated owner
    match /orders/{doc} {
      allow read, write: if request.auth != null;
    }
    match /order_items/{doc} {
      allow read, write: if request.auth != null;
    }

    // User profiles, addresses, wishlist — authenticated only
    match /profiles/{doc} {
      allow read, write: if request.auth != null;
    }
    match /addresses/{doc} {
      allow read, write: if request.auth != null;
    }
    match /wishlist/{doc} {
      allow read, write: if request.auth != null;
    }
  }
}
